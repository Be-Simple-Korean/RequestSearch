<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_movie_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:paddingLeft="15dp"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingRight="7dp">
    <TextView
        android:id="@+id/textview_movieitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="제목"
        android:textSize="20dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/textview_movieitem_image"
        android:layout_marginRight="10dp"
        android:textColor="@color/blue"/>
    <TextView
        android:id="@+id/tv_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제작년도"
        android:layout_alignLeft="@+id/textview_movieitem_title"
        android:layout_below="@+id/textview_movieitem_title"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/textview_movieitem_openDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0000년"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_release"
        android:layout_below="@id/textview_movieitem_title"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="평점"
        android:layout_alignLeft="@+id/textview_movieitem_title"
        android:layout_below="@+id/textview_movieitem_openDate"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/textview_movieitem_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10.00"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_grade"
        android:layout_below="@id/textview_movieitem_openDate"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tv_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감독"
       android:layout_alignLeft="@+id/textview_movieitem_title"
        android:layout_below="@+id/textview_movieitem_grade"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/textview_movieitem_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="홍길동"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/tv_director"
        android:layout_below="@id/textview_movieitem_grade"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/textview_movieitem_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher_round"
        android:layout_alignParentRight="true"/>
</RelativeLayout>